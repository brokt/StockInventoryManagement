@page "{id}"
@model Web.Pages.ErrorModel
@{
    ViewData["Title"] = "Hata";
}

<section class="404 error_page">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-12">
            </div>
            <div class="col-lg-6 col-md-12">
                <div class="content_outer d-flex text-center">
                    <div class="content_box_inner">
                        <div class="text_box">
                            <h1>@Model.Title</h1>
                            <p>
                                @Model.Description
                            </p>
                            @if (Model.ShowRequestId)
                            {
                                <p class="text-muted mt-3">
                                    <code style="color:#b8b9bb">@Model.RequestId</code>
                                </p>
                            }
                        </div>
                        <div class="text-center">
                            <a class="theme_btn tp_one" asp-page="/Index">Anasayfa'ya Dön</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-12">
            </div>
        </div>
    </div>
</section>